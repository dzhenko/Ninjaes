.container
    .jumbotron
        h1 Top Scores Page
        p Top 10 players here, alowing you to write messages to them
            table.table.table-striped.table-hover
                thead
                    tr
                        th #
                        th Username
                        th Gold
                        th Experience
                        th Contact
                tbody
                    tr(ng-repeat="score in topScores")
                        td {{$index + 1}}
                        td {{score.username}}
                        td {{score.gold}}
                        td {{score.experience}}
                        td
                            a(href="#/message-create/!{{score._id}}")
                                span.glyphicon.glyphicon-envelope